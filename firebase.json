{
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    "rewrites": [
      {
        "destination": "/view/[id].html",  
        "regex": "^/view/([^/]+?)(?:/)?$"
      }
    ]
  },
  "database": {
    "rules": "database.rules.json"
  }
}
